
<project name="ant for sbt.client.cfix" default="all">

    <description>
    This is the top level ant build file for the SBT client cfix vob
    </description>

    <!-- ant.file is the current file -->
    <echo>Building ${ant.file}</echo>


    <!-- top level sbt build -->
    <import file="/vobs/dte/sbtcommon/build/sbtcommon-build.xml"/>

    <!-- **************************************************************
            Init dirs based on OS.
    ******************************************************************* -->
    <target name="-client.cfix.Init" depends="-Init" description="set environment variables">

        <condition property="sbt.client.cfix.project.dir" value="../../client/cfix">
            <isset property="this.is.windows"/>
        </condition>

        <condition property="sbt.client.cfix.project.dir" value="${dte.root}/client/cfix">
            <isset property="this.is.unix"/>
        </condition>

    <!-- **************************************************************
            path name locations
    ******************************************************************* -->

        <!-- CLIENT VOB SPECIFIC SOURCE LOCATIONS -->

        <property name="sbt.client.cfix.classes.dir"        location="${sbt.client.cfix.project.dir}/classes"/>
        <property name="sbt.client.cfix.java.dir"           location="${sbt.client.cfix.project.dir}/Java"/>
        <property name="sbt.client.cfix.build.dir"          location="${sbt.client.cfix.project.dir}/build"/>
        <property name="sbt.client.cfix.release.dir"        location="${sbt.client.cfix.project.dir}/release"/>
        <property name="sbt.client.cfix.properties.dir"     location="${sbt.client.cfix.project.dir}/properties"/>
        <property name="sbt.client.cfix.xml.dir"            location="${sbt.client.cfix.properties.dir}/xml"/>
        <property name="sbt.client.cfix.dtd.dir"            location="${sbt.client.cfix.properties.dir}/dtd"/>
        <property name="sbt.client.cfix.idl.dir"            location="${sbt.client.cfix.project.dir}/idl"/>
        <property name="sbt.client.cfix.idl.classes"        location="${sbt.client.cfix.idl.dir}/trc_output/classes"/>

        <property name="build.info.dir"         location="${sbt.client.cfix.classes.dir}/com/cboe/sbt/framework"/>


        <!-- REDUNDANT -->
        <property name="client.cfix.impls.jarname"               value="client_impls.jar"/>
        <property name="client.cfix.interceptors.jarname"        value="client_interceptors.jar"/>
        <property name="client.cfix.interfaces.jarname"          value="client_interfaces.jar"/>

        <!-- CLIENT VOB SPECIFIC JAR LOCATIONS -->
        <property name="client.cfix.impls.rel.jar"               location="${sbt.client.cfix.release.dir}/client_impls.jar"/>
        <property name="client.cfix.impls.class.jar"             location="${sbt.client.cfix.classes.dir}/client_impls.jar"/>
        <property name="client.cfix.interceptors.rel.jar"        location="${sbt.client.cfix.release.dir}/client_interceptors.jar"/>
        <property name="client.cfix.interceptors.class.jar"      location="${sbt.client.cfix.classes.dir}/client_interceptors.jar"/>
        <property name="client.cfix.interfaces.rel.jar"          location="${sbt.client.cfix.release.dir}/client_interfaces.jar"/>
        <property name="client.cfix.interfaces.class.jar"        location="${sbt.client.cfix.classes.dir}/client_interfaces.jar"/>

        <property name="build.info.file"        value="CatResource.txt"/>
        <property name="configspec.class"       value="com.cboe.client.cfix.framework.CatResource"/>

        <property name="compile.debug"          value="true"/>
        <property name="compile.verbose"        value="true"/>

    </target>


    <!-- **************************************************************
            Compile and Build Core Jars
    ******************************************************************* -->
    <target name="Compile-Full"
        description="Build production (optimized, non-debug) version of the code"
            depends="-Init,Clean,-CompileCode,-CopyBuild">
    </target>

    <target name="Compile-Incremental"
        description="Build production (optimized, non-debug) version of the code WITHOUT CLEANING"
            depends="-Init,-CompileCode,-CopyBuild">
    </target>


</project>


