<!ENTITY % reusableElements SYSTEM "Header.dtd" >
%reusableElements;

<!ELEMENT GlobalSecurityService (NullSecurityServiceImpl*, SecurityServiceImpl*)>
<!ATTLIST GlobalSecurityService  type		  %typeConstraints;  #FIXED 'ManagedResource'
	objectName  CDATA	 #IMPLIED >

<!ELEMENT NullSecurityServiceImpl EMPTY>
<!ATTLIST NullSecurityServiceImpl
	type %typeConstraints; #FIXED "ManagedResource"
	name CDATA #REQUIRED 
	description CDATA #FIXED "null implementation resource"
>
<!ELEMENT SecurityServiceImpl (SecurityServiceImplProperties)>
<!ATTLIST SecurityServiceImpl
	type %typeConstraints; #FIXED "ManagedResource"
	name CDATA #REQUIRED
	description CDATA #FIXED "full implementation resource"
>
<!ELEMENT SecurityServiceImplProperties ( userid?, password?, certificateFileName?, (clientInterceptor | clientDelegateInterceptor)?, (serverInterceptor, serviceName)?, userTimeoutChannelName?, CASOU?)>
<!ATTLIST SecurityServiceImplProperties
	type %typeConstraints; #FIXED "ManagedProperties"
>

<!ELEMENT userid (#PCDATA)>
<!ATTLIST userid
	type %typeConstraints; #FIXED "ManagedProperty"
	mode %modeConstraints; #FIXED "readWrite"
	propertyType %propertyTypes; #FIXED "string"
	description CDATA #FIXED "user login ID"
>
<!ELEMENT password (#PCDATA)>
<!ATTLIST password
	type %typeConstraints; #FIXED "ManagedProperty"
	mode %modeConstraints; #FIXED "readWrite"
	propertyType %propertyTypes; #FIXED "string"
	description CDATA #FIXED "user password"
>
