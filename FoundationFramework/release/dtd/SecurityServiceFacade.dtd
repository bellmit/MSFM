<!ATTLIST certificateFileName
	type %typeConstraints; #FIXED "ManagedProperty"
	mode %modeConstraints; #FIXED "readWrite"
	propertyType %propertyTypes; #FIXED "string"
	description CDATA #FIXED "user certificate filename"
>
<!ELEMENT clientInterceptor EMPTY>
<!ATTLIST clientInterceptor
	type %typeConstraints; #FIXED "ManagedProperty"
	mode %modeConstraints; #FIXED "readWrite"
	propertyType %propertyTypes; #FIXED "enum"
	propertyValue CDATA #FIXED "value"
	value (true | false) #REQUIRED
	description CDATA #FIXED "client interceptor indicator"
>
<!ELEMENT clientDelegateInterceptor EMPTY>
<!ATTLIST clientDelegateInterceptor
	type %typeConstraints; #FIXED "ManagedProperty"
	mode %modeConstraints; #FIXED "readWrite"
